<Window x:Class="leituraWPF.BackupStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status do Backup" Height="650" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F1F5F9">

    <Window.Resources>
        <!-- ====== Sistema de Cores Limpo ====== -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="LightBlue" Color="#EFF6FF"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="PureWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextMedium" Color="#64748B"/>
        <SolidColorBrush x:Key="TextLight" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#059669"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#D97706"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#DC2626"/>

        <!-- Cores transparentes usando formato ARGB correto -->
        <SolidColorBrush x:Key="WhiteTransparent" Color="#4DFFFFFF"/>
        <SolidColorBrush x:Key="GreenLight" Color="#F0FDF4"/>
        <SolidColorBrush x:Key="YellowLight" Color="#FFFBEB"/>
        <SolidColorBrush x:Key="RedLight" Color="#FEF2F2"/>

        <!-- ====== Estilos Modernos ====== -->

        <!-- Card Principal -->
        <Style x:Key="MainCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" Opacity="0.08" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Pequeno -->
        <Style x:Key="SmallCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" Opacity="0.06" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Lista de Arquivos -->
        <Style x:Key="FileListCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" Opacity="0.05" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão Moderno -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBlue}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2563EB" BlurRadius="12" Opacity="0.4" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox de Pesquisa -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ProgressBar Moderno -->
        <Style x:Key="ModernProgress" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource LightBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <Border Name="PART_Indicator" 
                                    Background="{StaticResource PrimaryBlue}"
                                    HorizontalAlignment="Left"
                                    CornerRadius="6"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Limpo -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource LightBlue}"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="44"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextDark}"/>
            <Setter Property="Foreground" Value="{StaticResource PureWhite}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}" Margin="0,0,0,-221">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Style="{StaticResource MainCard}" Margin="24,24,24,16" Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Icon e Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryBlue}" CornerRadius="50" Width="60" Height="60" Margin="0,0,20,0">
                        <TextBlock Text="🔄" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Backup do Sistema" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                        <TextBlock Text="Sincronização em andamento..." FontSize="14" Foreground="{StaticResource TextMedium}" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Progresso Principal -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" MinWidth="200">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Progresso Geral" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextMedium}"/>
                        <TextBlock Grid.Column="1" x:Name="MainProgress" Text="0%" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBlue}"/>
                    </Grid>
                    <ProgressBar x:Name="MainProgressBar" Style="{StaticResource ModernProgress}" Value="0" Maximum="100"/>
                    <TextBlock x:Name="MainStatusText" Text="Preparando arquivos..." FontSize="11" 
                               Foreground="{StaticResource TextLight}" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conteúdo Principal -->
        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cards de Status -->
            <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,20">
                <!-- Total de Arquivos -->
                <Border Style="{StaticResource SmallCard}" Margin="4,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Yellow" CornerRadius="8" 
                                    Width="32" Height="32" Margin="0,0,12,0">
                                <TextBlock Text="📁" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Column="1" Text="Total" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock x:Name="TotalFiles" Text="0" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource TextDark}" HorizontalAlignment="Center"/>
                        <TextBlock Text="arquivos" FontSize="12" Foreground="{StaticResource TextMedium}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Pendentes -->
                <Border Style="{StaticResource SmallCard}" Margin="4,0" BorderBrush="{StaticResource WarningYellow}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="{StaticResource WarningYellow}" CornerRadius="8" 
                                    Width="32" Height="32" Margin="0,0,12,0">
                                <TextBlock Text="⏳" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Column="1" Text="Pendentes" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock x:Name="PendingCount" Text="0" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource WarningYellow}" HorizontalAlignment="Center"/>
                        <TextBlock Text="na fila" FontSize="12" Foreground="{StaticResource TextMedium}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Enviados -->
                <Border Style="{StaticResource SmallCard}" Margin="4,0" BorderBrush="{StaticResource SuccessGreen}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="{StaticResource SuccessGreen}" CornerRadius="8" 
                                    Width="32" Height="32" Margin="0,0,12,0">
                                <TextBlock Text="✅" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Column="1" Text="Enviados" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock x:Name="SentCount" Text="0" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource SuccessGreen}" HorizontalAlignment="Center"/>
                        <TextBlock Text="completos" FontSize="12" Foreground="{StaticResource TextMedium}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Erros -->
                <Border Style="{StaticResource SmallCard}" Margin="4,0" BorderBrush="{StaticResource ErrorRed}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="{StaticResource ErrorRed}" CornerRadius="8" 
                                    Width="32" Height="32" Margin="0,0,12,0">
                                <TextBlock Text="❌" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Column="1" Text="Erros" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextDark}" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock x:Name="ErrorCount" Text="0" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource ErrorRed}" HorizontalAlignment="Center"/>
                        <TextBlock Text="falhas" FontSize="12" Foreground="{StaticResource TextMedium}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Área de Tabs -->
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="20,12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="{StaticResource TextMedium}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" Background="Transparent" BorderThickness="0,0,0,3" 
                                            BorderBrush="Transparent" CornerRadius="8,8,0,0">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" 
                                                          HorizontalAlignment="Center" ContentSource="Header" 
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PureWhite}"/>
                                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource LightBlue}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- Tab 1: Status Atual -->
                <TabItem Header="📊 Status Atual">
                    <Border Style="{StaticResource MainCard}" Margin="0,8,0,0" Padding="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Lista Pendentes -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <Border Background="{StaticResource YellowLight}" CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⏳" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Arquivos Pendentes" FontWeight="SemiBold" FontSize="14" 
                                                   Foreground="{StaticResource TextDark}"/>
                                    </StackPanel>
                                </Border>
                                <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="PendingList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource YellowLight}" BorderBrush="{StaticResource WarningYellow}"
                                                        BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Ellipse Grid.Column="0" Fill="{StaticResource WarningYellow}" 
                                                                 Width="6" Height="6" VerticalAlignment="Top" Margin="0,4,8,0"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding FileName}" TextWrapping="Wrap"
                                                                   FontSize="12" Foreground="{StaticResource TextDark}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <!-- Lista Enviados -->
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <Border Background="{StaticResource GreenLight}" CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Arquivos Enviados" FontWeight="SemiBold" FontSize="14" 
                                                   Foreground="{StaticResource TextDark}"/>
                                    </StackPanel>
                                </Border>
                                <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="SentList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource GreenLight}" BorderBrush="{StaticResource SuccessGreen}"
                                                        BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="✓" Foreground="{StaticResource SuccessGreen}" 
                                                                   FontWeight="Bold" FontSize="12" Margin="0,0,8,0"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" FontSize="12"
                                                                       Foreground="{StaticResource TextDark}"/>
                                                            <TextBlock Text="Concluído" FontSize="10"
                                                                       Foreground="{StaticResource SuccessGreen}" 
                                                                       FontStyle="Italic" Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <!-- Lista Erros -->
                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <Border Background="{StaticResource RedLight}" CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="❌" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Arquivos com Erro" FontWeight="SemiBold" FontSize="14" 
                                                   Foreground="{StaticResource TextDark}"/>
                                    </StackPanel>
                                </Border>
                                <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="ErrorList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource RedLight}" BorderBrush="{StaticResource ErrorRed}"
                                                        BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="⚠" Foreground="{StaticResource ErrorRed}" 
                                                                   FontWeight="Bold" FontSize="12" Margin="0,0,8,0"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" FontSize="12"
                                                                       Foreground="{StaticResource TextDark}"/>
                                                            <TextBlock Text="Erro no envio" FontSize="10"
                                                                       Foreground="{StaticResource ErrorRed}" 
                                                                       FontStyle="Italic" Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- Tab 2: Histórico -->
                <TabItem Header="📋 Histórico">
                    <Border Style="{StaticResource MainCard}" Margin="0,8,0,0" Padding="24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Barra de Pesquisa -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" Style="{StaticResource SearchTextBox}" 
                                         Text="{Binding HistorySearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Height="44" FontSize="14" 
                                         Tag="🔍 Pesquisar por nome do arquivo ou O.S..."/>

                                <Border Grid.Column="1" Style="{StaticResource SmallCard}" Margin="12,0,0,0" MinWidth="120">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Total" FontSize="12" Foreground="{StaticResource TextMedium}" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="247" FontSize="20" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryBlue}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="registros" FontSize="10" Foreground="{StaticResource TextMedium}" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Área dos DataGrids -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Grid Enviados -->
                                <Border Grid.Column="0" Style="{StaticResource FileListCard}">
                                    <StackPanel>
                                        <Border Background="{StaticResource GreenLight}" CornerRadius="8" Padding="12,8" Margin="0,0,0,16">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0"/>
                                                <TextBlock Text="Histórico - Enviados" FontWeight="SemiBold" FontSize="14" 
                                                           Foreground="{StaticResource TextDark}"/>
                                            </StackPanel>
                                        </Border>
                                        <DataGrid x:Name="HistorySentList" ItemsSource="{Binding HistorySent}"
                                                  AutoGenerateColumns="False" IsReadOnly="True" MinHeight="300">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="📅 Data" 
                                                    Binding="{Binding CompletedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}" 
                                                    Width="140"/>
                                                <DataGridTextColumn Header="📄 Arquivo" Binding="{Binding FileName}" Width="*"/>
                                                <DataGridTemplateColumn Header="🔧 Ação" Width="80">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="📂" Tag="{Binding FilePath}" 
                                                                    Click="OpenFileLocation_Click" 
                                                                    Style="{StaticResource ModernButton}"
                                                                    Width="28" Height="28" Padding="0"
                                                                    ToolTip="Abrir localização"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>

                                <!-- Grid Erros -->
                                <Border Grid.Column="1" Style="{StaticResource FileListCard}">
                                    <StackPanel>
                                        <Border Background="{StaticResource RedLight}" CornerRadius="8" Padding="12,8" Margin="0,0,0,16">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="❌" FontSize="16" Margin="0,0,8,0"/>
                                                <TextBlock Text="Histórico - Erros" FontWeight="SemiBold" FontSize="14" 
                                                           Foreground="{StaticResource TextDark}"/>
                                            </StackPanel>
                                        </Border>
                                        <DataGrid x:Name="HistoryErrorList" ItemsSource="{Binding HistoryErrors}"
                                                  AutoGenerateColumns="False" IsReadOnly="True" MinHeight="300">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="📅 Data" 
                                                    Binding="{Binding CompletedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}" 
                                                    Width="140"/>
                                                <DataGridTextColumn Header="📄 Arquivo" Binding="{Binding FileName}" Width="*"/>
                                                <DataGridTemplateColumn Header="🔧 Ação" Width="80">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="📂" Tag="{Binding FilePath}" 
                                                                    Click="OpenFileLocation_Click" 
                                                                    Style="{StaticResource ModernButton}"
                                                                    Width="28" Height="28" Padding="0"
                                                                    ToolTip="Abrir localização"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>