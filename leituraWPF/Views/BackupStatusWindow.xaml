<Window x:Class="leituraWPF.BackupStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status do Backup" 
        Height="703" Width="980"  
        MinHeight="480" MinWidth="750" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F1F5F9">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="LightBlue" Color="#EFF6FF"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="PureWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextMedium" Color="#64748B"/>
        <SolidColorBrush x:Key="TextLight" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#059669"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#D97706"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#DC2626"/>
        <SolidColorBrush x:Key="GreenLight" Color="#F0FDF4"/>
        <SolidColorBrush x:Key="YellowLight" Color="#FFFBEB"/>
        <SolidColorBrush x:Key="RedLight" Color="#FEF2F2"/>

        <Style x:Key="MainCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="15" Opacity="0.07" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.05" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FileListCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernProgress" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource LightBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border x:Name="PART_Track" Background="{TemplateBinding Background}" CornerRadius="5">
                            <Border x:Name="PART_Indicator" Background="{StaticResource PrimaryBlue}" HorizontalAlignment="Left" CornerRadius="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource LightBlue}"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowHeight" Value="36"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextDark}"/>
            <Setter Property="Foreground" Value="{StaticResource PureWhite}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource MainCard}" Margin="16" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryBlue}" CornerRadius="50" Width="48" Height="48" Margin="0,0,16,0">
                        <TextBlock Text="🔄" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Backup do Sistema" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                        <TextBlock Text="Sincronização em andamento..." FontSize="13" Foreground="{StaticResource TextMedium}" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" MinWidth="180">
                    <Grid Margin="0,0,0,6">
                        <TextBlock Text="Progresso Geral" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextMedium}"/>
                        <TextBlock x:Name="MainProgress" Text="0%" FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBlue}" HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:Name="ProgressBar" Style="{StaticResource ModernProgress}" Value="0" Maximum="100"/>
                    <TextBlock x:Name="ProgressText" Text="Preparando arquivos..." FontSize="10" Foreground="{StaticResource TextLight}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,16">
                <Border Style="{StaticResource SmallCard}" Margin="4,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Border Background="{StaticResource TextDark}" CornerRadius="6" Width="28" Height="28" Margin="0,0,10,0" HorizontalAlignment="Left">
                                <TextBlock Text="📁" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Total" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock x:Name="TotalFiles" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextDark}" HorizontalAlignment="Center"/>
                        <TextBlock Text="arquivos" FontSize="11" Foreground="{StaticResource TextMedium}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource SmallCard}" Margin="4,0" BorderBrush="{StaticResource WarningYellow}">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Border Background="{StaticResource WarningYellow}" CornerRadius="6" Width="28" Height="28" Margin="0,0,10,0" HorizontalAlignment="Left">
                                <TextBlock Text="⏳" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Pendentes" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock x:Name="PendingCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource WarningYellow}" HorizontalAlignment="Center"/>
                        <TextBlock Text="na fila" FontSize="11" Foreground="{StaticResource TextMedium}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource SmallCard}" Margin="4,0" BorderBrush="{StaticResource SuccessGreen}">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Border Background="{StaticResource SuccessGreen}" CornerRadius="6" Width="28" Height="28" Margin="0,0,10,0" HorizontalAlignment="Left">
                                <TextBlock Text="✅" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Enviados" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock x:Name="SentCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource SuccessGreen}" HorizontalAlignment="Center"/>
                        <TextBlock Text="completos" FontSize="11" Foreground="{StaticResource TextMedium}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource SmallCard}" Margin="4,0" BorderBrush="{StaticResource ErrorRed}">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Border Background="{StaticResource ErrorRed}" CornerRadius="6" Width="28" Height="28" Margin="0,0,10,0" HorizontalAlignment="Left">
                                <TextBlock Text="❌" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Erros" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock x:Name="ErrorCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource ErrorRed}" HorizontalAlignment="Center"/>
                        <TextBlock Text="falhas" FontSize="11" Foreground="{StaticResource TextMedium}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Padding="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="16,10"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="{StaticResource TextMedium}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="📊 Status Atual">
                    <Border Style="{StaticResource MainCard}" Margin="0,4,0,0" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <Border Background="{StaticResource YellowLight}" CornerRadius="6" Padding="10,6" Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⏳" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Arquivos Pendentes" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextDark}"/>
                                    </StackPanel>
                                </Border>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="PendingList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="Transparent" BorderBrush="{StaticResource BorderLight}" BorderThickness="0,0,0,1" Padding="8,6" Margin="0,0,4,0">
                                                    <TextBlock Text="{Binding FileName}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" FontSize="11" Foreground="{StaticResource TextDark}" ToolTip="{Binding FileName}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="8,0">
                                <Border Background="{StaticResource GreenLight}" CornerRadius="6" Padding="10,6" Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✅" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Arquivos Enviados" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextDark}"/>
                                    </StackPanel>
                                </Border>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="SentList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="Transparent" BorderBrush="{StaticResource BorderLight}" BorderThickness="0,0,0,1" Padding="8,6" Margin="0,0,4,0">
                                                    <TextBlock Text="{Binding FileName}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" FontSize="11" Foreground="{StaticResource TextDark}" ToolTip="{Binding FileName}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <Border Background="{StaticResource RedLight}" CornerRadius="6" Padding="8,4,8,4" Margin="0,0,0,8">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="❌" FontSize="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="Arquivos com Erro" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextDark}"/>
                                        </StackPanel>
                                        <Button Content="Reenviar" Style="{StaticResource ModernButton}" Background="{StaticResource ErrorRed}" Click="RetryErrors_Click" HorizontalAlignment="Right" Padding="8,4"/>
                                    </Grid>
                                </Border>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="ErrorList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="Transparent" BorderBrush="{StaticResource BorderLight}" BorderThickness="0,0,0,1" Padding="8,6" Margin="0,0,4,0">
                                                    <TextBlock Text="{Binding FileName}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" FontSize="11" Foreground="{StaticResource TextDark}" ToolTip="{Binding FileName}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>

                <TabItem Header="📋 Histórico">
                    <Border Style="{StaticResource MainCard}" Margin="0,4,0,0" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <TextBox Style="{StaticResource SearchTextBox}" Text="{Binding HistorySearchText, UpdateSourceTrigger=PropertyChanged}" Tag="🔍 Pesquisar por nome do arquivo ou O.S..."/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource FileListCard}">
                                    <DataGrid x:Name="HistorySentList" ItemsSource="{Binding HistorySent}" AutoGenerateColumns="False" IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="📅 Data" Binding="{Binding CompletedAt, StringFormat={}{0:dd/MM/yy HH:mm}}" Width="110"/>
                                            <DataGridTextColumn Header="📄 Arquivo" Binding="{Binding FileName}" Width="*"/>
                                            <DataGridTemplateColumn Header="Ação" Width="Auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Content="📂" Tag="{Binding FilePath}" Click="OpenFileLocation_Click" Style="{StaticResource ModernButton}" Width="26" Height="26" Padding="0" ToolTip="Abrir localização"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>

                                <Border Grid.Column="1" Style="{StaticResource FileListCard}">
                                    <DataGrid x:Name="HistoryErrorList" ItemsSource="{Binding HistoryErrors}" AutoGenerateColumns="False" IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="📅 Data" Binding="{Binding CompletedAt, StringFormat={}{0:dd/MM/yy HH:mm}}" Width="110"/>
                                            <DataGridTextColumn Header="📄 Arquivo" Binding="{Binding FileName}" Width="*"/>
                                            <DataGridTemplateColumn Header="Ações" Width="Auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Content="↻" Tag="{Binding FilePath}" Click="RetryHistory_Click" Style="{StaticResource ModernButton}" Width="26" Height="26" Padding="0" ToolTip="Reenviar" Margin="0,0,4,0"/>
                                                            <Button Content="📂" Tag="{Binding FilePath}" Click="OpenFileLocation_Click" Style="{StaticResource ModernButton}" Width="26" Height="26" Padding="0" ToolTip="Abrir localização"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>