<Window x:Class="leituraWPF.BackupStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status do Backup" Height="550" Width="900"
        MinHeight="450" MinWidth="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F8FAFE">

    <Window.Resources>
        <!-- ====== Cores puras (Color) ====== -->
        <Color x:Key="PrimaryBlueColor">#FF1E88E5</Color>
        <Color x:Key="SecondaryBlueColor">#FFE3F2FD</Color>
        <Color x:Key="AccentBlueColor">#FF0D47A1</Color>
        <Color x:Key="LightBlueColor">#FFF8FAFE</Color>
        <Color x:Key="PureWhiteColor">#FFFFFFFF</Color>
        <Color x:Key="TextGrayColor">#FF424242</Color>
        <Color x:Key="BorderGrayColor">#FFE1E8ED</Color>

        <!-- Cores com transparência (Color) -->
        <Color x:Key="WhiteTransparentColor">#33FFFFFF</Color>
        <Color x:Key="OrangeTransparentColor">#1AFFB74D</Color>
        <Color x:Key="GreenTransparentColor">#1A66BB6A</Color>
        <Color x:Key="RedTransparentColor">#1AEF5350</Color>

        <!-- ====== Brushes que referenciam as cores acima ====== -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="{StaticResource PrimaryBlueColor}"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="{StaticResource SecondaryBlueColor}"/>
        <SolidColorBrush x:Key="AccentBlue" Color="{StaticResource AccentBlueColor}"/>
        <SolidColorBrush x:Key="LightBlue" Color="{StaticResource LightBlueColor}"/>
        <SolidColorBrush x:Key="PureWhite" Color="{StaticResource PureWhiteColor}"/>
        <SolidColorBrush x:Key="TextGray" Color="{StaticResource TextGrayColor}"/>
        <SolidColorBrush x:Key="BorderGray" Color="{StaticResource BorderGrayColor}"/>

        <SolidColorBrush x:Key="WhiteTransparent" Color="{StaticResource WhiteTransparentColor}"/>
        <SolidColorBrush x:Key="OrangeTransparent" Color="{StaticResource OrangeTransparentColor}"/>
        <SolidColorBrush x:Key="GreenTransparent" Color="{StaticResource GreenTransparentColor}"/>
        <SolidColorBrush x:Key="RedTransparent" Color="{StaticResource RedTransparentColor}"/>

        <!-- Animação suave -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Estilo moderno para TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="Transparent" BorderThickness="0,0,0,3" 
                                BorderBrush="Transparent" CornerRadius="8,8,0,0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" 
                                              HorizontalAlignment="Center" ContentSource="Header" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource PureWhite}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                <Setter Property="Foreground" Value="#1E88E5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo fluido para GroupBox -->
        <Style x:Key="FluidGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource PureWhite}"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="8" Opacity="0.3" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Effect="{TemplateBinding Effect}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="{StaticResource SecondaryBlue}" 
                                        CornerRadius="12,12,0,0" Padding="16,12">
                                    <ContentPresenter ContentSource="Header" 
                                                      TextElement.FontWeight="SemiBold"
                                                      TextElement.FontSize="14"
                                                      TextElement.Foreground="{StaticResource AccentBlue}"/>
                                </Border>
                                <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo moderno para ListBox -->
        <Style x:Key="FluidListBox" TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
        </Style>

        <!-- Estilo fluido para ProgressBar -->
        <Style x:Key="FluidProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource SecondaryBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <Grid>
                                <Border Name="PART_Track" CornerRadius="4"/>
                                <Border Name="PART_Indicator" 
                                        Background="{StaticResource PrimaryBlue}"
                                        HorizontalAlignment="Left"
                                        CornerRadius="4">
                                    <Border.Effect>
                                        <!-- Color precisa ser Color, não Brush -->
                                        <DropShadowEffect Color="{StaticResource PrimaryBlueColor}" 
                                                          BlurRadius="8" Opacity="0.4" ShadowDepth="0"/>
                                    </Border.Effect>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBlue}"/>
            <Setter Property="RowBackground" Value="{StaticResource PureWhite}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource PureWhite}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Estilo para Buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="{StaticResource PureWhite}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource LightBlue}" CornerRadius="0">
        <TabControl Background="Transparent">
            <TabItem Header="📊 Status Atual">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho com informações resumidas -->
                    <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" 
                            CornerRadius="12" Padding="24,16" Margin="0,0,0,20">
                        <Border.Effect>
                            <!-- Aqui também: Color precisa ser Color -->
                            <DropShadowEffect Color="{StaticResource PrimaryBlueColor}" 
                                              BlurRadius="20" Opacity="0.3" ShadowDepth="4"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Ellipse Width="16" Height="16" Fill="{StaticResource PureWhite}" Margin="0,0,12,0"/>
                                <TextBlock Text="Backup em Progresso" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource PureWhite}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Border Grid.Column="1" Background="{StaticResource WhiteTransparent}" 
                                    CornerRadius="20" Padding="16,8" Margin="20,0">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="#FFB74D" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="PendingCount" Text="0 Pendentes"
                                               Foreground="{StaticResource PureWhite}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="{StaticResource WhiteTransparent}" 
                                    CornerRadius="20" Padding="16,8" Margin="10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="#66BB6A" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="SentCount" Text="0 Enviados"
                                               Foreground="{StaticResource PureWhite}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="3" Background="{StaticResource WhiteTransparent}" 
                                    CornerRadius="20" Padding="16,8" Margin="10,0">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="#EF5350" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="ErrorCount" Text="0 Erros"
                                               Foreground="{StaticResource PureWhite}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Área principal com as listas -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Lista de Pendentes -->
                        <GroupBox Grid.Column="0" Style="{StaticResource FluidGroupBox}">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="12" Height="12" Fill="#FFB74D" Margin="0,0,10,0"/>
                                    <TextBlock Text="Arquivos Pendentes" FontWeight="SemiBold"/>
                                </StackPanel>
                            </GroupBox.Header>
                            <ListBox x:Name="PendingList" Style="{StaticResource FluidListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource OrangeTransparent}" BorderBrush="#FFB74D"
                                                BorderThickness="1" CornerRadius="8" Padding="12,8" Margin="0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Ellipse Grid.Column="0" Width="6" Height="6" Fill="#FFB74D" 
                                                         VerticalAlignment="Top" Margin="0,4,12,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding}" TextWrapping="Wrap" 
                                                           FontSize="12" Foreground="{StaticResource TextGray}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <!-- Lista de Enviados -->
                        <GroupBox Grid.Column="1" Style="{StaticResource FluidGroupBox}">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="12" Height="12" Fill="#66BB6A" Margin="0,0,10,0"/>
                                    <TextBlock Text="Arquivos Enviados" FontWeight="SemiBold"/>
                                </StackPanel>
                            </GroupBox.Header>
                            <ListBox x:Name="SentList" Style="{StaticResource FluidListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource GreenTransparent}" BorderBrush="#66BB6A"
                                                BorderThickness="1" CornerRadius="8" Padding="12,8" Margin="0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="✓" Foreground="#66BB6A" 
                                                           FontWeight="Bold" FontSize="14" Margin="0,0,12,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="12" 
                                                               Foreground="{StaticResource TextGray}"/>
                                                        <TextBlock Text="Enviado com sucesso" FontSize="10"
                                                               Foreground="#66BB6A" FontStyle="Italic" Margin="0,2,0,0"/>
                                                    </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <!-- Lista de Erros -->
                        <GroupBox Grid.Column="2" Style="{StaticResource FluidGroupBox}">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="12" Height="12" Fill="#EF5350" Margin="0,0,10,0"/>
                                    <TextBlock Text="Arquivos com Erro" FontWeight="SemiBold"/>
                                </StackPanel>
                            </GroupBox.Header>
                            <ListBox x:Name="ErrorList" Style="{StaticResource FluidListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource RedTransparent}" BorderBrush="#EF5350"
                                                BorderThickness="1" CornerRadius="8" Padding="12,8" Margin="0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="⚠" Foreground="#EF5350" 
                                                           FontWeight="Bold" FontSize="14" Margin="0,0,12,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="12" 
                                                               Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text="Erro no processamento" FontSize="10"
                                                               Foreground="#EF5350" FontStyle="Italic" Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>
                    </Grid>

                    <!-- Área de progresso -->
                    <Border Grid.Row="2" Background="{StaticResource PureWhite}" 
                            BorderBrush="{StaticResource BorderGray}" BorderThickness="1" 
                            CornerRadius="12" Padding="24" Margin="0,20,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#E0E0E0" BlurRadius="8" Opacity="0.3" ShadowDepth="2"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Progresso do Backup:" 
                                           FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"
                                           Foreground="{StaticResource TextGray}"/>
                                <TextBlock x:Name="ProgressText" Grid.Column="2" Text="0%"
                                           FontWeight="Bold" FontSize="18" Foreground="#1E88E5"/>
                            </Grid>

                            <ProgressBar x:Name="ProgressBar" Grid.Row="1"
                                         Style="{StaticResource FluidProgressBar}"
                                         Minimum="0" Maximum="100" Margin="0,0,0,16"/>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="StatusText" Grid.Column="0" Text="{Binding CurrentStatusText}"
                                           FontStyle="Italic" Foreground="#666" FontSize="12" 
                                           HorizontalAlignment="Left"/>
                                <TextBlock x:Name="TimeElapsed" Grid.Column="1" Text="{Binding CurrentTimeElapsed}"
                                           FontSize="12" Foreground="#666" HorizontalAlignment="Right"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="📋 Histórico">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10"
                             Text="{Binding HistorySearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Pesquisar O.S"/>

                    <!-- Histórico de enviados -->
                    <GroupBox Grid.Row="1" Grid.Column="0" Style="{StaticResource FluidGroupBox}">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#66BB6A" Margin="0,0,10,0"/>
                                <TextBlock Text="Histórico - Enviados" FontWeight="SemiBold"/>
                            </StackPanel>
                        </GroupBox.Header>
                        <DataGrid x:Name="HistorySentList" ItemsSource="{Binding HistorySent}"
                                  AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="📅 Data" 
                                    Binding="{Binding CompletedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}" 
                                    Width="140"/>
                                <DataGridTextColumn Header="📄 Arquivo" Binding="{Binding FileName}" Width="*"/>
                                <DataGridTemplateColumn Header="🔧 Ação" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="📂 Abrir" Tag="{Binding FilePath}" 
                                                    Click="OpenFileLocation_Click" FontSize="10"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- Histórico de erros -->
                    <GroupBox Grid.Row="1" Grid.Column="1" Style="{StaticResource FluidGroupBox}">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Fill="#EF5350" Margin="0,0,10,0"/>
                                <TextBlock Text="Histórico - Erros" FontWeight="SemiBold"/>
                            </StackPanel>
                        </GroupBox.Header>
                        <DataGrid x:Name="HistoryErrorList" ItemsSource="{Binding HistoryErrors}"
                                  AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="📅 Data" 
                                    Binding="{Binding CompletedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}" 
                                    Width="140"/>
                                <DataGridTextColumn Header="📄 Arquivo" Binding="{Binding FileName}" Width="*"/>
                                <DataGridTemplateColumn Header="🔧 Ação" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="📂 Abrir" Tag="{Binding FilePath}" 
                                                    Click="OpenFileLocation_Click" FontSize="10"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Border>
</Window>
