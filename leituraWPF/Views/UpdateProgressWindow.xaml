<Window x:Class="leituraWPF.Views.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atualização" Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock x:Name="StatusText" Text="Inicializando..." Margin="0,0,0,10"/>
        <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100" IsIndeterminate="True"/>
    </StackPanel>
</Window>

