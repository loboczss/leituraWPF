<Window x:Class="leituraWPF.UpdatePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atualizacao disponivel"
        Width="460" Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FAFAFE"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Uma nova versão do leituraWPF está disponível."
                       FontSize="16" FontWeight="Bold" Foreground="#223c5c" />
            <Border Margin="0,12,0,12" Padding="10" Background="#F1F5F9" CornerRadius="8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Versão atual: " FontWeight="Bold"/>
                        <TextBlock x:Name="LblLocalVer"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nova versão: " FontWeight="Bold"/>
                        <TextBlock x:Name="LblRemoteVer"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock TextWrapping="Wrap"
                       Text="Para aplicar a atualização será necessário fechar o aplicativo e reiniciá-lo automaticamente."/>
            <TextBlock x:Name="TxtAuto"
                       Margin="0,10,0,0"
                       FontStyle="Italic"
                       Foreground="#3a558a"/>
        </StackPanel>

        <DockPanel Grid.Row="1" LastChildFill="False" Margin="0,14,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button x:Name="BtnLater" Content="Depois" Click="BtnLater_Click"/>
                <Button x:Name="BtnNow" Content="Atualizar agora"
                        Style="{StaticResource PrimaryButton}" Click="BtnNow_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
